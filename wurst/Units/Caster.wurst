package Caster

public class Caster
  unit caster
  ability cast

  construct(real x, real y, player owner, real facing)
    caster = CreateUnit(owner, 'A000', x, y, facing)

  function assignSpell(integer abilcode, int level)
    caster
      ..addAbility((abilcode))
      ..setAbilityLevel(abilcode, level)

